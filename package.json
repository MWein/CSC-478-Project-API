{
  "name": "csc-478-project-api",
  "version": "0.0.1",
  "description": "API for CSC478 project",
  "main": "server.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "check": "npm run lint && npm run test",
    "test": "jest",
    "lint": "eslint --fix --format table --ext .js src test --cache",
    "dev": "set NODE_ENV=np && babel-node src/server.js --presets es2015,stage-2",
    "prod": "set NODE_ENV=prod && babel-node src/server.js --presets es2015,stage-2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MinuteMan92/CSC-478-Project-API.git"
  },
  "author": "Hex",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "eslint": "4.14.0",
    "jest": "22.0.4",
    "sinon": "^4.1.3",
    "chai": "^4.1.2",
    "sinon-express-mock": "^2.0.0",
    "sinon-chai": "^2.14.0"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "dotenv": "^5.0.0",
    "eslint-plugin-jest": "^21.12.1",
    "express": "4.16.2",
    "lodash": "4.17.4",
    "pg": "^7.4.1",
    "superagent": "^3.8.2"
  },
  "jest": {
    "roots": [
      "./test"
    ],
    "testRegex": "(/test/.*|(\\.|/)(test|spec))\\.jsx?$",
    "transformIgnorePatterns": [
      "node_modules/.*"
    ],
    "testPathIgnorePatterns": [
      ".*_jestsetup.js",
      "./test/test-utils",
      ".*json",
      ".eslintrc"
    ]
  }
}
